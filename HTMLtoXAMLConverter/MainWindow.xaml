<Window  
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="HTMLConverter.MainWindow"
    Title="HTML to XAML Prototype Conversion Utility">
    <Border Background="LightSteelBlue" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Top" BorderBrush="DarkSlateGray" BorderThickness="1">
      <TabControl Margin="5">
        <TabItem Header="HTML to XAML">
        <StackPanel Margin="10">
          <TextBlock Margin="10">Paste HTML Content in the TextBox below, then press the "Convert" button to convert the HTML to XAML.</TextBlock>
          <TextBox Margin="10" Name="htmlToXamlTextBox" BorderBrush="DarkSlateBlue" HorizontalAlignment="Stretch" Height="400" xml:space="preserve" AcceptsReturn="True"/>
          <StackPanel Orientation="Horizontal" Margin="5">
            <Button Click="convertContent" Margin="5">Convert!</Button>
            <Button Click="copyXAML" Margin="5">Copy to Clipboard</Button>
          </StackPanel>
        </StackPanel>
        </TabItem>

        <TabItem Header="XAML to HTML">
          <StackPanel Margin="10">
            <TextBlock Margin="10">Paste XAML Content in the TextBox below, then press the "Convert" button to convert the XAML to HTML.</TextBlock>
            <TextBox Margin="10" Name="xamlToHtmlTextBox" BorderBrush="DarkSlateBlue" HorizontalAlignment="Stretch" Height="400" xml:space="preserve" AcceptsReturn="True"/>
            <StackPanel Orientation="Horizontal" Margin="5">
              <Button Click="convertContent2" Margin="5">Convert!</Button>
              <Button Click="copyHTML" Margin="5">Copy to Clipboard</Button>
            </StackPanel>
          </StackPanel>
        </TabItem>
        
      </TabControl>
    </Border>
  </Window>
  